<?xml version="1.0" encoding="utf-8" ?>
<Defs>
<ThingDef ParentName="BaseHumanMakeableGun">
  <defName>VC_Hurricane</defName>
  <label>Hurricane</label>
  <description>拥有极高机动性的速射步枪，射速与稳定兼具，适合突击单位使用。</description>
  <graphicData>
    <texPath>Things/Weapon/Gallian/Gallia_LMG(Hurricane)</texPath>
    <graphicClass>Graphic_Single</graphicClass>
    <drawSize>2</drawSize>
  </graphicData>
  <soundInteract>Interact_Rifle</soundInteract>
  <recipeMaker>
    <researchPrerequisite>GasOperation</researchPrerequisite>
    <skillRequirements>
      <Crafting>6</Crafting>
    </skillRequirements>
  </recipeMaker>
  <weaponTags>
    <li>VC_Gallia_LMG_Weapons</li>
  </weaponTags>
  <statBases>
    <WorkToMake>54000</WorkToMake>
    <Mass>5.82</Mass>
    <AccuracyTouch>0.40</AccuracyTouch>
    <AccuracyShort>0.48</AccuracyShort>
    <AccuracyMedium>0.40</AccuracyMedium>
    <AccuracyLong>0.40</AccuracyLong>
    <RangedWeapon_Cooldown>1.8</RangedWeapon_Cooldown>
    <MarketValue>425</MarketValue>
  </statBases>
  <costList>
    <Steel>45</Steel>
    <ComponentIndustrial>5</ComponentIndustrial>
    <WoodLog>30</WoodLog>
  </costList>
  <verbs>
    <li>
      <verbClass>Verb_Shoot</verbClass>
      <hasStandardCommand>true</hasStandardCommand>
      <defaultProjectile>Bullet_Hurricane</defaultProjectile>
      <warmupTime>1.0</warmupTime>
      <range>25</range>
      <burstShotCount>20</burstShotCount>
      <ticksBetweenBurstShots>5</ticksBetweenBurstShots> <!-- 720 rpm ≈ 5 ticks/shot -->
      <soundCast>Shot_Rifle</soundCast>
      <soundCastTail>GunTail_Rifle</soundCastTail>
      <muzzleFlashScale>6</muzzleFlashScale>
    </li>
  </verbs>
  <tools>
    <li>
      <label>butt</label>
      <capacities><li>Blunt</li></capacities>
      <power>9</power>
      <cooldownTime>2</cooldownTime>
    </li>
    <li>
      <label>bayonet</label>
      <capacities><li>Blunt</li><li>Poke</li></capacities>
      <power>9</power>
      <cooldownTime>2</cooldownTime>
    </li>
  </tools>
</ThingDef>

<ThingDef ParentName="BaseBullet">
  <defName>Bullet_Hurricane</defName>
  <label>Hurricane子弹</label>
  <graphicData>
    <texPath>Things/Projectile/Bullet_Small</texPath>
    <graphicClass>Graphic_Single</graphicClass>
  </graphicData>
  <projectile>
    <damageDef>Bullet</damageDef>
    <damageAmountBase>9</damageAmountBase>
    <stoppingPower>1.6</stoppingPower>
    <armorPenetrationBase>0.28</armorPenetrationBase>
    <speed>48</speed>
  </projectile>
</ThingDef>

</Defs>