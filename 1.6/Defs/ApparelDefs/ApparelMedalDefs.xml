  <ThingDef ParentName="MedalNoQualityBase">
    <defName>Gallia_Medal_a</defName>
    <label>公国勋章</label>
    <description>是对被认可为加利亚公国作出特别功劳的人所授予的勋章。不仅在军队中，在各种行业的功绩也会发放。</description>
    <graphicData>
      <texPath>Things/Medals/Medal_a</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <thingCategories>
      <li>ApparelMisc</li>
    </thingCategories>
    <statBases>
      <MarketValue>1000</MarketValue>
      <MaxHitPoints>100</MaxHitPoints>
      <Mass>0.01</Mass>
      <EquipDelay>0.2</EquipDelay>
    </statBases>
    
    <equippedStatOffsets>
      <MoveSpeed>+0.1</MoveSpeed>
    </equippedStatOffsets>
    
    <apparel>
      <countsAsClothingForNudity>true</countsAsClothingForNudity>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <layers>
        <li>MedalLayer</li>
      </layers>
    </apparel>

    <comps Inherit="True">
      <li Class="VC_Faction.CompProperties_ApparelAbility">
        <abilityDef>VC_Retreat</abilityDef>
      </li>
    </comps>

  </ThingDef>

