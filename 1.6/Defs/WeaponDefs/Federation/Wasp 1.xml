<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="BaseHumanMakeableGun">
    <defName>VC_WaspA</defName>
    <label>LF Wasp No.1</label>
    <description>A sniper rifle made by Edinburgh's own Wester Kelvin Company. It is a bolt-action rifle, boasting high accuracy compared to other Lenfield offshoots. - Circa 1935</description>
    <graphicData>
      <texPath>Things/Weapon/Federation/Fedration_sniperrifle(LF Wasp No.1)</texPath>
      <graphicClass>Graphic_Single</graphicClass>
			<drawSize>2</drawSize>
    </graphicData>
    <weaponTags>
      <li>VC_Federation_Sniper_Weapons</li>
    </weaponTags>
    <soundInteract>Interact_Rifle</soundInteract>
    <recipeMaker>
      <researchPrerequisite>PrecisionRifling</researchPrerequisite>
      <skillRequirements>
        <Crafting>7</Crafting>
      </skillRequirements>
    </recipeMaker>
    <statBases>
      <WorkToMake>75000</WorkToMake>
      <Mass>4.35</Mass>
      <AccuracyTouch>0.42</AccuracyTouch>
      <AccuracyShort>0.68</AccuracyShort>
      <AccuracyMedium>0.90</AccuracyMedium>
      <AccuracyLong>0.90</AccuracyLong>
      <RangedWeapon_Cooldown>2.0</RangedWeapon_Cooldown>
      <MarketValue>550</MarketValue>
    </statBases>
    <costList>
      <Steel>55</Steel>
        <WoodLog>20</WoodLog>
      <ComponentIndustrial>8</ComponentIndustrial>
    </costList>
    <verbs>
      <li>
        <verbClass>Verb_Shoot</verbClass>
        <hasStandardCommand>true</hasStandardCommand>
        <defaultProjectile>Bullet_WaspA</defaultProjectile>
        <warmupTime>2</warmupTime>
        <range>51.9</range>
        <soundCast>Shot_SniperRifle</soundCast>
        <soundCastTail>GunTail_Heavy</soundCastTail>
        <muzzleFlashScale>9</muzzleFlashScale>
      </li>
    </verbs>
    <tools>
      <li>
        <label>stock</label>
        <capacities>
          <li>Blunt</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
      <li>
        <label>barrel</label>
        <capacities>
          <li>Blunt</li>
          <li>Poke</li>
        </capacities>
        <power>9</power>
        <cooldownTime>2</cooldownTime>
      </li>
    </tools>
  </ThingDef>
  <ThingDef ParentName="BaseBullet">
    <defName>Bullet_WaspA</defName>
    <label>LF Wasp No.1 bullet</label>
    <graphicData>
      <texPath>Things/Projectile/Bullet_Big</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <projectile>
      <damageDef>Bullet</damageDef>
      <damageAmountBase>25</damageAmountBase>
      <stoppingPower>1.5</stoppingPower>
      <armorPenetrationBase>0.48</armorPenetrationBase>
      <speed>100</speed>
    </projectile>
  </ThingDef>


</Defs>