<?xml version="1.0" encoding="utf-8" ?>
<Defs>

	<ThingDef ParentName="BaseHumanMakeableGun">
		<defName>VC_RobinsonA</defName>
		<label>Robinson M91</label>
		<description>Produced by the Walt Ordnance Co. in the United States of Vinland, machine guns in EW1 were too bulky and heavy to be portable. After the war, engineers confronted the idea of machine guns for foot soldiers, and so the Robinson was created as the world's first true submachine gun. - Circa 1935</description>
		<graphicData>
			<texPath>Things/Weapon/Federation/Fedration_SMG_1(Robinson M91)</texPath>
			<graphicClass>Graphic_Single</graphicClass>
			<drawSize>2</drawSize>
		</graphicData>
		<soundInteract>Interact_SMG</soundInteract>
    <recipeMaker>
      <researchPrerequisite>GasOperation</researchPrerequisite>
      <skillRequirements>
        <Crafting>5</Crafting>
      </skillRequirements>
    </recipeMaker>
    <weaponTags>
      <li>VC_Federation_SMG_Weapons</li>
    </weaponTags>
		<statBases>
			<WorkToMake>20000</WorkToMake>
			<Mass>3.75</Mass>
			<AccuracyTouch>0.85</AccuracyTouch>
			<AccuracyShort>0.85</AccuracyShort>
			<AccuracyMedium>0.45</AccuracyMedium>
			<AccuracyLong>0.40</AccuracyLong>
			<RangedWeapon_Cooldown>1.3</RangedWeapon_Cooldown>
      <MarketValue>225</MarketValue>
		</statBases>
		<costList>
				<Steel>30</Steel>
      	<WoodLog>45</WoodLog>
			<ComponentIndustrial>5</ComponentIndustrial>
		</costList>
