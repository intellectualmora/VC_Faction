<?xml version="1.0" encoding="utf-8"?>
<Defs>
  <ThingDef ParentName="BuildingBase">
    <defName>VC_Portablemortar</defName>
    <minifiedDef>MinifiedThing</minifiedDef>
    <thingClass>VC_Faction.Building_TurretGun</thingClass>
    <label>Portablemortar</label>
    <drawerType>MapMeshAndRealTime</drawerType>
    <description>Portablemortar</description>
    <graphicData>
      <texPath>Things/Buildings/Portablemortar/Portablemortar</texPath>
      <graphicClass>Graphic_Multi</graphicClass>
      <drawSize>(2,2)</drawSize>
    </graphicData>
    <destroyOnDrop>true</destroyOnDrop>
    <size>(1,1)</size>
    <tradeability>None</tradeability>
    <tickerType>Normal</tickerType>
    <useHitPoints>false</useHitPoints>
    <altitudeLayer>Building</altitudeLayer>
    <hasInteractionCell>True</hasInteractionCell>
    <designationCategory>Security</designationCategory>
    <interactionCellOffset>(0,0,-1)</interactionCellOffset>
    <costList>
      <Steel>150</Steel>
      <ComponentIndustrial>6</ComponentIndustrial>
    </costList>
    <thingCategories>
      <li>BuildingsPower</li>
    </thingCategories>
    <statBases>
      <MaxHitPoints>180</MaxHitPoints>
      <WorkToBuild>2000</WorkToBuild>
      <AccuracyTouch>0.50</AccuracyTouch>
      <AccuracyShort>0.75</AccuracyShort>
      <AccuracyMedium>0.75</AccuracyMedium>
      <AccuracyLong>0.65</AccuracyLong>
      <RangedWeapon_Cooldown>4.7</RangedWeapon_Cooldown>
      <DeteriorationRate>0</DeteriorationRate>
      <Mass>15</Mass>
      <Flammability>0</Flammability>
      <Beauty>-20</Beauty>
    </statBases>
     <verbs>
      <li>
        <verbClass>VC_Faction.Verb_Shoot</verbClass>
        <forceNormalTimeSpeed>false</forceNormalTimeSpeed>
        <warmupTime>4.0</warmupTime>
        <forcedMissRadius>9</forcedMissRadius>
        <forcedMissRadiusClassicMortars>13</forcedMissRadiusClassicMortars>
        <isMortar>true</isMortar>
        <requireLineOfSight>false</requireLineOfSight>
        <minRange>14.9</minRange>
        <range>89.9</range>
        <burstShotCount>1</burstShotCount>
        <soundCast>Mortar_LaunchA</soundCast>
        <muzzleFlashScale>16</muzzleFlashScale>
        <consumeFuelPerShot>1</consumeFuelPerShot>
        <targetParams>
          <canTargetLocations>true</canTargetLocations>
        </targetParams>
      </li>
    </verbs>
    <comps>
      <li Class="CompProperties_Forbiddable"/>
      <li Class="VC_Faction.CompProperties_Mannable">
        <manWorkType>Violent</manWorkType>
      </li>
      <li Class="CompProperties_ChangeableProjectile" />
    </comps>
    <placeWorkers>
      <li>PlaceWorker_NotUnderRoof</li>
      <li>PlaceWorker_PreventInteractionSpotOverlap</li>
    </placeWorkers>
    <inspectorTabs>
      <li>ITab_Shells</li>
    </inspectorTabs>
     <building>
      <turretBurstWarmupTime>4.0</turretBurstWarmupTime>
      <turretBurstCooldownTime>28.0</turretBurstCooldownTime>

      <fixedStorageSettings>
        <filter>
          <categories>
            <li>MortarShells</li>
          </categories>
        </filter>
      </fixedStorageSettings>
      <defaultStorageSettings>
        <filter>
          <categories>
            <li>MortarShells</li>
          </categories>
          <disallowedThingDefs>
            <li>Shell_Firefoam</li>
            <li>Shell_AntigrainWarhead</li>
          </disallowedThingDefs>
        </filter>
      </defaultStorageSettings>
    </building>
  </ThingDef>

</Defs>